<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/gridLayout"
    xmlns:papp="http://schemas.android.com/apk/res-auto"
    android:weightSum="3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="2"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <carbon.widget.FrameLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <com.app.mylib.grid3d.PorterShapeImageView
                android:id="@+id/image_add1"
                style="@style/gridImage"
                papp:siShape="@drawable/square_mask" />

        </carbon.widget.FrameLayout>

        <carbon.widget.FrameLayout
            android:id="@+id/frame2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.app.mylib.grid3d.PorterShapeImageView
                android:id="@+id/image_add2"
                style="@style/gridImage"
                papp:siShape="@drawable/square_mask" />

        </carbon.widget.FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <carbon.widget.FrameLayout
            android:id="@+id/frame3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <com.app.mylib.grid3d.PorterShapeImageView
                android:id="@+id/image_add3"
                style="@style/gridImage"
                papp:siShape="@drawable/square_mask" />

        </carbon.widget.FrameLayout>

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <carbon.widget.FrameLayout
                    android:id="@+id/frame4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.app.mylib.grid3d.PorterShapeImageView
                        android:id="@+id/image_add4"
                        style="@style/gridImage"
                        papp:siShape="@drawable/square_mask" />

                </carbon.widget.FrameLayout>

                <carbon.widget.FrameLayout
                    android:id="@+id/frame5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.app.mylib.grid3d.PorterShapeImageView
                        android:id="@+id/image_add5"
                        style="@style/gridImage"
                        papp:siShape="@drawable/square_mask" />

                </carbon.widget.FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <carbon.widget.FrameLayout
                    android:id="@+id/frame6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.app.mylib.grid3d.PorterShapeImageView
                        android:id="@+id/image_add6"
                        style="@style/gridImage"
                        papp:siShape="@drawable/square_mask" />

                </carbon.widget.FrameLayout>

                <carbon.widget.FrameLayout
                    android:id="@+id/frame7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.app.mylib.grid3d.PorterShapeImageView
                        android:id="@+id/image_add7"
                        style="@style/gridImage"
                        papp:siShape="@drawable/square_mask" />

                </carbon.widget.FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>